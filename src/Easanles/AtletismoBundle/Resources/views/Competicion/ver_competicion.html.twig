
{% extends 'EasanlesAtletismoBundle:Default:index.html.twig' %}

{% block title %}{{ com.nombre }} ({{ com.temp }}){% endblock %}

{% block navbar %}
      <li><a class="inactive">Atletas</a></li>
      <li class="active"><a href="../../competiciones">Competiciones</a></li>
      <li><a class="inactive">Records</a></li>
      <li><a class="inactive">Noticias</a></li>
      <li><a class="inactive">Informes</a></li>
      <li><a href="../../configuracion/">Configuración</a></li>
{% endblock %}

{% block breadcrumb %}
  <li><a href="../../">Portada Admin</a></li>
  <li><a href="../../competiciones">Competiciones</a></li>
  <li class="active">{{ com.nombre }} ({{ com.temp }})</li>
{% endblock %}

{% block container %}
   <h1 id="container_title" class="row page-header">{{ com.nombre }} ({{ com.temp }})</h1>
    
   <div class="row">
      <div class="col-xs-12 col-sm-4">
         <img src="/www/web/bundles/atletismo/images/ejemplo.jpg" alt="{{ com.nombre }}" class="img-responsive thumbnail">
      </div>
      <div class="col-xs-12 col-sm-8">
         <table class="table table-responsive">
            <tbody>
               <tr><td><strong>Tipo:</strong></td><td>AIRE LIBRE</td></tr>
               <tr><td><strong>Ubicacion:</strong></td><td>{{ com.ubicacion }}</td></tr>
               <tr><td colspan="2"><strong>Descripción:</strong></td></tr>
               <tr><td colspan="2"><p>{{ com.desc }}</p></td></tr>
               <tr><td><strong>Fecha de comienzo:</strong></td><td>{% if com.fecha is null %} <em>Sin fecha</em> {% else %} {{ com.fecha|date('d/m/Y') }} {% endif %}</td></tr>
               <tr><td><strong>Página web:</strong></td><td><strong>Correo electrónico de contacto:</strong></td></tr>
               <tr><td><a href="{{ com.web }}">{{ com.web }}</a></td><td><a href="mailto:{{ com.email }}">{{ com.email }}</a></td></tr>
            </tbody>
         </table>
         <table class="table table-condensed table-responsive">
            <tbody>
               <tr><td><strong>Sede:</strong></td><td>{{ com.sede }}</td>
               <td><strong>Nivel:</strong></td><td>{{ com.nivel }}</td>
               <td><strong>Federación:</strong></td><td>{{ com.feder }}</td></tr>
            </tbody>
         </table>
         {% if com.esfeder is same as(true) %}
         <p class="text-center"><strong>COMPETICIÓN FEDERADA</strong></p>
         {% elseif com.esoficial is same as(true) %}
         <p class="text-center"><strong>COMPETICIÓN OFICIAL DEL CLUB</strong></p>
         {% endif %}
         <a type="button" class="btn btn-m btn-default" href="javascript:history.back()"><span class="glyphicon glyphicon-menu-left"></span> Volver</a>
         <a type="button" class="btn btn-m btn-default" href="../../pruebas/{{ com.sid }}"><span class="glyphicon glyphicon-list"></span> Lista de pruebas <span class="badge">{{ com.pruebas.toArray()|length }}</span></a>
      </div>
   </div>
         
         
         
         =======================
         <dl class="dl-horizontal"><dt>Cartel</dt><dd>{{ com.cartel }}</dd></dl>
         <dl class="dl-horizontal"><dt>Es federado</dt><dd>{{ com.esfeder }}</dd></dl>
         <dl class="dl-horizontal"><dt>Es oficial</dt><dd>{{ com.esoficial }}</dd></dl>

   
   
{% endblock %}


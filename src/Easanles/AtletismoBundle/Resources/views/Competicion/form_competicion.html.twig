
{% extends 'EasanlesAtletismoBundle:Default:index.html.twig' %}

{% block title %}Añadir competición{% endblock %}

{% block navbar %}
      <li><a class="inactive">Atletas</a></li>
      <li class="active"><a href="../">Competiciones</a></li>
      <li><a class="inactive">Records</a></li>
      <li><a class="inactive">Noticias</a></li>
      <li><a class="inactive">Informes</a></li>
      <li><a href="../../configuracion/">Configuración</a></li>
{% endblock %}

{% block breadcrumb %}
  <li><a href="../../">Portada Admin</a></li>
  <li><a href="../">Competiciones</a></li>
  <li class="active">Añadir competición</li>
{% endblock %}

{% block container %}
{# Mostrar contenido de una variable {{ dump() }} #}
   <h1 id="container_title" class="row page-header">Añadir competición</h1>
   
   <div id="data_form" class="row">

{#{{ form(form, {'attr': {'novalidate': 'novalidate'}}) }}#}

{{ form_start(form) }}
    {{ form_errors(form) }}
    <div class=row">
       <div class="form_row col-xs-8">
          {{ form_row(form.nombre) }}
       </div>
       <div class="form_row col-xs-4">
          {{ form_row(form.temp) }}
       </div>
    </div>
    <div class=row">
       <div class="form_row col-xs-12 col-sm-4">
          {{ form_label(form.ubicacion) }}
          {{ form_errors(form.ubicacion) }}
          {{ form_widget(form.ubicacion) }}
    </div>
       <div class="form_row col-xs-6 col-sm-4">
          {{ form_row(form.sede) }}
       </div>
       <div class="form_row col-xs-6 col-sm-4">
          {{ form_label(form.fecha) }}
          {{ form_errors(form.fecha) }}
          {{ form_widget(form.fecha) }}
       </div>
    </div>
    <div class=row">
       <div class="form_row col-xs-12">
          {{ form_row(form.desc) }}
       </div>
    </div>
    <div class=row">
       <div class="form_row col-xs-6 col-md-2">
          {{ form_row(form.nivel) }}
       </div>
       <div class="form_row col-xs-6 col-md-2">
          {{ form_row(form.feder) }}
       </div>
       <div class="form_row col-xs-6 col-md-4">
          {{ form_row(form.web) }}
       </div>
       <div class="form_row col-xs-6 col-md-4">
          {{ form_row(form.email) }}
       </div>
    </div>
    <div class="row">
       <div class="form_row col-xs-12 col-sm-6">
          {{ form_label(form.cartel) }}
          {{ form_errors(form.cartel) }}
          {{ form_widget(form.cartel) }}
       </div>
       <div class="col-xs-12 col-sm-6">
          <div class="row">
             <div class="form_row col-xs-6">
                {{ form_errors(form.esfeder) }}
                {{ form_widget(form.esfeder) }}
                {{ form_label(form.esfeder) }}
             </div>
             <div class="form_row col-xs-6">
                {{ form_errors(form.esoficial) }}
                {{ form_widget(form.esoficial) }}
                {{ form_label(form.esoficial) }}
             </div>
          </div>
          <div class="row">
              <a type="button" class="btn btn-m btn-default col-xs-3" href="../"><span class="glyphicon glyphicon-menu-left"></span>Cancelar</a>
              <button type="submit" class="btn btn-m btn-primary col-xs-offset-1 col-xs-8"><span class="glyphicon glyphicon-save"></span>Guardar</button>
          </div>
       </div>
    </div>

    {{ form_rest(form) }}
 
{{ form_end(form) }}
   </div>
   
{% endblock %}

{% block js %}
   <script type="text/javascript">
      $(document).ready(function(){
    	    $("#com_esfeder").click(function(){
     	       cb = document.getElementById('com_esoficial');
        	    if ($('#com_esfeder').is(':checked') == true){
        	       cb.checked = true;
        	       cb.disabled = true;
             } else {
                cb.disabled = false;
             }
    	    });
      });
   </script>

{% endblock %}




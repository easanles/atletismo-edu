    {{ form_errors(form) }}
    
    <div class="subform panel panel-default">
       <div class="panel-heading">Lista de inscripciones</div>
       <div class="panel-body">
          <table class="table-responsive table-condensed">
             <tbody id="form-collection">
                <tr><th>Prueba</th><th>Precio</th><th>Estado</th><th></th></tr>
                {% for ins in form.inscripciones %}
                <tr class="subform-row">
                   <td>{{ ins.vars.value.sidPru.sidTprm.sidTprf.nombre }}. {% if ins.vars.value.sidPru.sidTprm.sexo == 0 %}Masculino, {% elseif ins.vars.value.sidPru.sidTprm.sexo == 1 %}Femenino, {% endif%}{{ ins.vars.value.sidPru.sidTprm.entorno }}</td>
                   {% if mode == "edit" %}
                   <td>{{ form_widget(ins.coste) }}{{ form_errors(ins.coste) }}</td>
                   <td>{{ form_widget(ins.estado) }}{{ form_errors(ins.estado) }}</td>
                   {% elseif mode == "del" %}
                   <td>ESTADO</td>
                   <td><button type="button" class="btn btn-sm btn-danger" onClick=""><span class="glyphicon glyphicon-remove" aria-label="Eliminar"></span></button></td>
                   {% endif %}
                </tr>
                {% endfor %}
             </tbody>
          </table>
       </div>
    </div>
    
    {{ form_rest(form) }}
 
{{ form_end(form) }}

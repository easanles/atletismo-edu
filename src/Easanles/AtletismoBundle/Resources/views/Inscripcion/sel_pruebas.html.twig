   <div class="row">
      {% if selAtl|length > 1 %}
      <div class="col-xs-12 col-sm-5 scrollable">
         <table class="table table-hover table-bordered table-condensed table-striped table-responsive">
            <tbody>
               <tr>
                  <th>Atleta</th>
                  <th><abbr title="Categoría" class="visible-xs-block">Cat.</abbr><div class="hidden-xs">Categoría</th>
                  <th><abbr title="Pruebas" class="visible-xs-block">Pru.</abbr><div class="hidden-xs">Pruebas</th>
                  <th><abbr title="Selección" class="visible-xs-block">Sel.</abbr><div class="hidden-xs">Selección</div></th>
               </tr>
               {% for atl in selAtl %}
                  <tr id="tr-atl-{{ atl[0] }}">
                     <td>{{ atl[1] }}</td>
                     <td>{{ atl[2] }}</td>
                     <td><span id="count-pru-{{ atl[0] }}">0</span></td>
                     <td><button id="sel-pruatl-{{ atl[0] }}" class="btn btn-xs btn-block btn-default sel-pruatl" onClick="toggleRadioButton(this)"><span class="glyphicon glyphicon-arrow-right"></span></button></td>
                  </tr>
               {% endfor %}
            </tbody>
         </table>
      </div>
      <div class="col-xs-12 col-sm-7 scrollable">
      {% else %}
      <div class="col-xs-8">
         <dl class="dl-horizontal">
            <dt>Atleta seleccionado</dt><dd>{{ selAtl[0][1] }}</dd>
            <dt>Categoría</dt><dd>{{ selAtl[0][2] }}</dd>
         </dl>
      </div>
      <div class="col-xs-4">
         <h3>Pruebas: <span id="count-pru-{{ selAtl[0][0] }}">0</span></h3>
         <button id="sel-pruatl-{{ selAtl[0][0] }}" class="hidden btn-default sel-pruatl" onClick="toggleRadioButton(this)"></button>
      </div>
   </div>
   <div class="row">
      <div class="col-xs-12 scrollable">
      {% endif %}
         <table id="pru-for-atl" class="table table-hover table-bordered table-condensed table-striped table-responsive">
            <tbody>
               <tr>
                  <th>Prueba</th>
                  <th class="hidden-xs">Precio</th>
                  <th><abbr title="Selección" class="visible-xs-block">Sel.</abbr><div class="hidden-xs">Selección</div></th>
               </tr>
            </tbody>
         </table>
      </div>
   </div>
      
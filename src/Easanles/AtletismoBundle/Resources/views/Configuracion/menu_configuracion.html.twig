
{% extends 'EasanlesAtletismoBundle:Default:index.html.twig' %}

{% block title %}Configuración de la aplicación{% endblock %}

{% block navbar %}
      <li><a class="inactive">Atletas</a></li>
      <li><a href="../competiciones">Competiciones</a></li>
      <li><a class="inactive">Records</a></li>
      <li><a class="inactive">Noticias</a></li>
      <li><a class="inactive">Informes</a></li>
      <li class="active"><a href="./">Configuración</a></li>
{% endblock %}

{% block breadcrumb %}
  <li><a href="../">Portada Admin</a></li>
  <li class="active">Configuración</li>
{% endblock %}

   {% block modallabel %}<div id="data1"></div><div id="data2"></div>{% endblock %}
   {% block modalbody %}<div id="dialog-body"></div>{% endblock %}
   {% block modalprimary %}
      <a class="btn btn-primary" onClick="submitDialogForm()"><span class="glyphicon glyphicon-save"></span> Crear</a>
   {% endblock %}

{% block container %}
   <h1 id="container_title" class="row page-header">Configuración de la aplicación</h1>
   <ul class="nav nav-tabs">
      <li id="navtab-tp" role="presentation" onClick="toggleContent('tp')"><a class="clickable">Tipos de pruebas</a></li>
      <li id="navtab-oa" role="presentation" onClick="toggleContent('oa')"><a class="clickable">Opciones Avanzadas</a></li>
   </ul>
   <div class="row config-content">
      <div id="tabcontent-tp" style="display:none">
         <div class="row">
            <a type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalDialog" data-data1="Nuevo tipo de prueba" data-data2="" data-okbtn="#" data-action="./tipoprueba/nuevo/"><span class="glyphicon glyphicon-plus"></span> Añadir</a>
            <a id="btn_tprf-refresh" class="btn btn-default" onClick="loadViews()"><span class="glyphicon glyphicon-refresh"></span> Actualizar</a>
         </div>
         <div class="row">
            <table id="tprf-table" class="table table-hover table-bordered table-condensed table-striped table-responsive">
            </table>
         </div>
         
      </div>
      <div id="tabcontent-oa" style="display:none">
         <button id="btn_poblarbd" type="button" class="btn btn-primary" data-toggle="tooltip" data-placement="bottom" title="INSERT INTO ..."><span class="glyphicon glyphicon-save"></span> Poblar BD</button>
         <button id="btn_borrarbd" type="button" class="btn btn-danger" data-toggle="tooltip" data-placement="bottom" title="DELETE FROM ..."><span class="glyphicon glyphicon-remove-circle"></span> Borrar datos BD</button>
         <button id="btn_rehacerbd" type="button" class="btn btn-danger" data-toggle="tooltip" data-placement="bottom" title="doctrine:database:drop --force&#10;doctrine:database:create&#10;doctrine:schema:update --force&#10;doctrine:fixtures:load --append"><span class="glyphicon glyphicon-refresh"></span> Rehacer BD</button>
         <button id="btn_limpiarcache" type="button" class="btn btn-default" data-toggle="tooltip" data-placement="bottom" title="cache:clear&#10;cache:clear --env=prod"><span class="glyphicon glyphicon-trash"></span> Limpiar cache</button>
         <button id="btn_asseticdump" type="button" class="btn btn-default inactive" data-toggle="tooltip" data-placement="bottom" title="assetic:dump"><span class="glyphicon glyphicon-refresh"></span> Assetic dump</button>
         
         <div id="alert_div"> </div>
      </div>
   </div>

   
{% endblock %}

{% block js %}
   <script src="{{ asset('bundles/atletismo/js/scripts.js') }}"></script>
   <script src="{{ asset('bundles/atletismo/js/adminscripts.js') }}"></script>
{% endblock %}



